@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}


<div class="main-banner" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <section class="vh-100">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-sm-6 text-black">


                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                            <form action="/User/Login" method="post" class="needs-validation" style="width: 23rem;" novalidate>

                                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;text-align:center">Đăng nhập</h3>

                                <div class="form-outline mb-4">
                                    <label for="validationCustom01" class="form-label">Email</label>
                                    <input name="Email" type="email" class="form-control" id="emailInput"   required>

                                    <div class="invalid-feedback">
                                        <span class="validation-message-email"></span>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="validationCustom01" class="form-label">Mật khẩu</label>
                                    <input name="Password" type="password" class="form-control" id="passwordInput" minlength="6" required>
                                    <div class="invalid-feedback">
                                        <span class="validation-message-password"></span>
                                    </div>
                                    <p id="tempMessage" style="color: #DC3545; margin-top: 10px; margin-left:10px;"> @ViewBag.Message </p>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn d-grid gap-2 col-6 mx-auto" type="submit">Login</button>
                                </div>

                                <p style="text-align:center;"><a class="text-muted" href="/User/ForgotPassword">Quên mật khẩu?</a></p>
                                <p style="text-align:center;">Bạn chưa có tài khoản? <a href="/User/Register" class="link-info">Đăng ký mới tại đây</a></p>

                            </form>

                        </div>

                    </div>
                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <img src="~/Assets/images/about-right-dec.png"
                             alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                    </div>
                </div>
            </div>
        </section>

