


@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@{
    var user = ViewBag.user;


}


<div class="page">

    <!-- Body -->
    <div class="page-wrapper">
        <!-- Page header -->
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <!-- Page pre-title -->

                        <h2 class="page-title">
                            Dự án
                        </h2>
                    </div>
                    <!-- Page title actions -->
                    <div class="col-auto ms-auto d-print-none">
                        <div class="btn-list">

                            @if (user.Status == "Leader")
                            {
                                <a href="#" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-addstartproject">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                    Thêm thành viên
                                </a>
                                <a href="#" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-createproject">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                    Tạo mới dự án
                                </a>

                            }




                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page body -->
        <div class="page-body">
            <div class="container-xl">
                <div class="row row-deck row-cards">

                    @*Invoice*@
                    <div class="col-12">
                        <div class="card">

                            <div class="table-responsive">
                                <table class="table card-table table-vcenter text-nowrap datatable">
                                    <thead>
                                        <tr>
                                            <th>Tên dự án</th>
                                            <th>Mô tả dự án</th>
                                            <th>Ngày tạo</th>
                                            <th>Người tạo</th>
                                            <th>Email</th>

                                            <th></th>

                                        </tr>
                                    </thead>
                                    @if (user.Status == "Leader")
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tbody>

                                                <tr>
                                                    <td>
                                                        <a class="nav-link " href="@Url.Action("Index", "BUGs", new { id = item.ProjectID })">
                                                            <span class="flag flag-country-us"></span>
                                                            @item.Name
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @item.Decription
                                                    </td>
                                                    <td>
                                                        @item.DateCreate
                                                    </td>
                                                    <td>
                                                        @item.PeopleCreate
                                                    </td>
                                                    <td>
                                                        @item.EmailPeoCreate
                                                    </td>


                                                    <td class="text-end">
                                                        <a href="#" style="padding-right:20px;" data-bs-toggle="modal" data-bs-target="#modal-editproject-@item.ProjectID">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" /></svg>
                                                        </a>
                                                        <a href="#" style="padding-right:20px;" data-bs-toggle="modal" data-bs-target="#modal-deleteproject-@item.ProjectID">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.0 by - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" /></svg>

                                                        </a>
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#modal-detailproject-@item.ProjectID">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by- https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" /></svg>

                                                        </a>

                                                    </td>

                                                </tr>

                                            </tbody>


                                            using (Html.BeginForm("EditProject", "Home", new { id = item.ProjectID }, FormMethod.Post))
                                            {
                                                <div class="modal modal-blur fade" id="modal-editproject-@item.ProjectID" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Cập nhật thông tin dự án</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Tên dự án</label>
                                                                    <input type="text" value="@item.Name" class="form-control" name="NameProject" placeholder="Tên dự án của bạn">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Mô tả dự án</label>
                                                                    <textarea value class="form-control" name="DecriptionProject" rows="3">@item.Decription</textarea>
                                                                </div>

                                                                <div class="row">
                                                                </div>

                                                            </div>

                                                            <div class="modal-footer">
                                                                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                                                    Hủy
                                                                </a>
                                                                <button type="submit" class="btn btn-primary ms-auto">
                                                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                        <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2"></path>
                                                                        <path d="M12 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                                                        <path d="M14 4l0 4l-6 0l0 -4"></path>
                                                                    </svg>
                                                                    Lưu
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }


                                            using (Html.BeginForm("DeleteProject", "Home", new { id = item.ProjectID }, FormMethod.Post))
                                            {
                                                <div class="modal modal-blur fade" id="modal-deleteproject-@item.ProjectID" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Xác nhận xóa dự án của bạn !</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Tên dự án</label>
                                                                    <input type="text" value="@item.Name" class="form-control" name="NameProject" placeholder="Tên dự án của bạn" readonly>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Mô tả dự án</label>
                                                                    <textarea class="form-control" name="DecriptionProject" rows="3" readonly>@item.Decription</textarea>
                                                                </div>

                                                                <div class="row">
                                                                </div>

                                                            </div>

                                                            <div class="modal-footer">
                                                                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                                                    Hủy
                                                                </a>
                                                                <button type="submit" class="btn btn-primary ms-auto">
                                                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-check" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                        <path d="M5 12l5 5l10 -10"></path>
                                                                    </svg>
                                                                    Đồng ý
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                            using (Html.BeginForm("DetailProject", "Home", new { id = item.ProjectID }, FormMethod.Post))
                                            {
                                                <div class="modal modal-blur fade" id="modal-detailproject-@item.ProjectID" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Chi tiết dự án</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Tên dự án</label>
                                                                    <input type="text" value="@item.Name" class="form-control" name="NameProject" placeholder="Tên dự án của bạn" readonly>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Mô tả dự án</label>
                                                                    <textarea class="form-control" name="DecriptionProject" rows="3" readonly>@item.Decription</textarea>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Thành viên đã tham gia dự án</label>
                                                                    <select name="projectName" class="form-select" style="width:440px;">
                                                                        @foreach (var projectmbs in ViewBag.projectmbs)
                                                                        {
                                                                            if (item.ProjectID == projectmbs.ProjectID && projectmbs.ProjectID == projectmbs.ProjectID_PMB)
                                                                            {
                                                                                <option selected>@projectmbs.Email</option>
                                                                            }

                                                                        }

                                                                    </select>
                                                                </div>

                                                            </div>

                                                            <div class="modal-footer">

                                                                <a data-bs-dismiss="modal" type="submit" class="btn btn-primary ms-auto">
                                                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-check" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                        <path d="M5 12l5 5l10 -10"></path>
                                                                    </svg>
                                                                    Thoát
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }


                                        }



                                        using (Html.BeginForm("CreateProject", "Home", FormMethod.Post))
                                        {
                                            <div class="modal modal-blur fade" id="modal-createproject" tabindex="-1" role="dialog" aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Tạo mới một dự án</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label">Tên dự án</label>
                                                                <input type="text" class="form-control" name="NameProject" placeholder="Tên dự án của bạn">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Mô tả dự án</label>
                                                                <textarea class="form-control" name="DecriptionProject" rows="3" placeholder="Mô tả dự án của bạn"></textarea>
                                                            </div>



                                                        </div>

                                                        <div class="modal-footer">
                                                            <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                                                Hủy
                                                            </a>
                                                            <button type="submit" class="btn btn-primary ms-auto">
                                                                <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                                                Tạo mới dự án
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }




                                        using (Html.BeginForm("SendMailAddStart", "Home", FormMethod.Post))
                                        {
                                            <div class="modal modal-blur fade" id="modal-addstartproject" tabindex="-1" role="dialog" aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Tạo mới một dự án</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label">Tên dự án</label>
                                                                <div class="col-lg-4">
                                                                    <div class="mb-3">

                                                                        <select name="projectName" class="form-select" style="width:440px;">

                                                                            @foreach (var item in Model)
                                                                            {
                                                                                <option selected>@item.Name</option>
                                                                            }

                                                                        </select>

                                                                    </div>
                                                                </div>
                                                            </div>


                                                            <div class="row">
                                                                <div class="col-lg-8">
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Thêm thành viên</label>
                                                                        <div class="input-group input-group-flat">
                                                                            <span class="input-group-text"> </span>
                                                                            <input type="email" class="form-control ps-0" placeholder="Nhập Email cần thêm" name="EmailStart">

                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-lg-4">
                                                                    <div class="mb-3" style="margin-top:28px;">


                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>

                                                        <div class="modal-footer">
                                                            <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                                                Hủy
                                                            </a>
                                                            <button type="submit" class="btn btn-primary ms-auto">
                                                                <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                                                Thêm
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    }
                                    else if (user.Status == "Employee" && Model != null)
                                    {

                                        <tbody>

                                            <tr>
                                                <td>
                                                    <a class="nav-link " href="@Url.Action("Index", "BUGs", new { id = @Model.ProjectID })">
                                                        <span class="flag flag-country-us"></span>
                                                        @Model.Name
                                                    </a>
                                                </td>
                                                <td>
                                                    @Model.Decription
                                                </td>
                                                <td>
                                                    @Model.DateCreate
                                                </td>
                                                <td>
                                                    @Model.PeopleCreate
                                                </td>
                                                <td>
                                                    @Model.EmailPeoCreate
                                                </td>




                                            </tr>

                                        </tbody>

                                    }


                                </table>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>




